<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="mon image" class="card-img-top" style="width: 100%; height: auto">
    {% else %}
        <img src="{{ '/images/properties/empty.jpg' | imagine_filter('thumb') }}" alt="mon image" class="card-img-top" style="width: 100%; height: auto">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a>
        </h5>
        <p class="car-text">{{ property.surface }} m2 - {{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-style: 2rem;font-weight:bold;">
            {{ property.formattedPrice }}â‚¬
        </div>
    </div>
</div>